@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Movie</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
           <th>Genre</th>
        </tr>
    </thead>
    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.id} ,null)
            </td>
            <td>
                @movie.Genre.Type
            </td>
        </tr>

    }
</table>