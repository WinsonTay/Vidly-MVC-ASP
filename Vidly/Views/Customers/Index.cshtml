@model List<Vidly.Models.Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Customer</h3>
@Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-primary", @style = "margin-bottom:10px;" })

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    <a href="/Customers/Edit/@customer.id">@customer.name</a>
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
            </tr>

        }

    </table>

}
else
{
    <p>Dont have any Customers Yet</p>
}



